{% extends 'AdminAdmBundle::layout.html.twig' %}
{% block title %}{{ parent() }} {{ title }}{% endblock %}

{% block body %}

<style>
.imgloader{
  background:url(/img/ajax-loader.gif) no-repeat;
  background-size: 100% 22px;
  width:87px;
  height:22px;
  display:none;
}
.progress {
  margin: 0px;
}
</style>

<div class="row">
<table class="table table-striped table-bordered table-hover table-condensed">
<thead>
  <tr>
    <th>id</th>
    <th>Команда</th>
    <th>Компания</th>
    <th>Аттракцион</th>
    <th>Игра</th>
    <th>Добавлена команда</th>
    <th>Запущена команда</th>
    <th>Завершена команда</th>
    <th>Выполнение</th>
  </tr>
</thead>
<tbody>

{% for i in data %}
<tr>
  <td>{{ i.id }}</td>
  <td>{{ i.type_cmd }}</td>
  <td>{{ i.company }}</td>
  <td>{{ i.attraction_id }}</td>
  <td>{{ i.game }}</td>
  <td>{{ i.add_cmd }}</td>
  <td>{{ i.startexec }}</td>
  <td>{{ i.endexec }}</td>
  <td>
    <div class="progress">
      <div class="progress-bar" role="progressbar" aria-valuenow="{{ i.progress }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ i.progress }}%;">
        {{ i.progress }}%
      </div>
    </div>
  </td>
</tr>
{% endfor %}

</tbody>
</table>
<a href="{{ url('admin_adm_historycommands') }}" class="btn btn-default">Обновить</a>
</div>

{% endblock %}