{% extends 'AdminAdmBundle::layout.html.twig' %}
{% block title %}{{ parent() }} {{ title }}{% endblock %}

{% block body %}
<style>
.imgloader{
  background:url(/img/ajax-loader.gif) no-repeat;
  background-size: 100% 22px;
  width:87px;
  height:22px;
  display:none;
}
.progress {
  margin: 0px;
}
</style>

<div class="row">
<table class="table table-striped table-bordered table-hover table-condensed">
<thead>
  <tr>
    <th>id</th>
    <th>Компания</th>
    <th>Аттракцион</th>
    <th>Игра</th>
    <th>Дата</th>
  </tr>
</thead>
<tbody>
{% for i in data %}
<tr>
  <td>{{ i.id }}</td>
  <td>{{ i.company }}</td>
  <td>{{ i.attraction_id }}</td>
  <td>{{ i.game }}</td>
  <td>{{ i.dateadd }}</td>
</tr>
{% endfor %}
</tbody>
</table>
<a href="{{ url('admin_adm_gamesinstall') }}" class="btn btn-default">Обновить</a>
</div>

{% endblock %}