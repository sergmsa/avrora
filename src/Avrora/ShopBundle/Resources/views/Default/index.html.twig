{% extends 'AvroraShopBundle::layout.html.twig' %}
{% block title %}{{ title }}{% endblock %}

{% block auth %}
<div class="form-group">
  <button type="button" class="menubottombtn btn btn-success navbar-btn pull-right"><span class="glyphicon glyphicon-book"></span> Жанр игры</button>
</div>
{% endblock %}

{% block body %}

<style>
.item img{
  display:inline;
}
.menubottombtn{
  cursor:pointer;
  outline:none !important;
  
}
.menubottom{
  position: fixed;
  top: 0px;
  left:0;
  right:0;
  text-align: center;
  z-index:999;
  display:none;
  margin-top: 50px;
  background: #eee;
  padding: 5px 0px;
  box-shadow: 0px 2px 7px rgba(0,0,0,0.3);
}

.menubottomcontent button{
  margin-bottom:5px;
}
.nextpage{
  width:100%;
  margin-top:30px;
}
</style>
<script>
$(document).ready(function(){
  $(".menubottombtn").click(function(event){
     $(".menubottom").slideToggle( "slow" );
  });
  
  
});
</script>

<div class="row">
  {% for item in games %}
  <div class="col-xs-12 col-sm-4 col-md-4">
    <img class="img-thumbnail" src="/games/{{item.id}}.jpg" style="width: 200px;">
    <h2>{{ item.name }}</h2>
    <h4><span class="label label-success"><span class="glyphicon glyphicon-shopping-cart"></span> &nbsp;&nbsp;{{ item.price }}$</span></h4>
    <!--<h4><span class="label label-success"><span class="glyphicon glyphicon-ok"></span> &nbsp;&nbsp;Установлен</span></h4>-->
    <p><a href="{{ url('avrora_shop_detail', { 'id': item.id }) }}" class="btn btn-default">Перейти &raquo;</a></p>
  </div>
  {% endfor %}
</div>

<div class="row">
<button class="btn btn-success nextpage" >Еще...</button>
</div>

<div class="menubottom">
  <button type="button" class="btn btn-default btn-lg">Бесплатные игры</button>
  <button type="button" class="btn btn-default btn-lg">Гонки</button>
  <button type="button" class="btn btn-default btn-lg">Инди</button>
  <button type="button" class="btn btn-default btn-lg">Казуальная игра</button>
  <button type="button" class="btn btn-default btn-lg">ММО</button>
  <button type="button" class="btn btn-default btn-lg">Приключенческая игра</button>
  <button type="button" class="btn btn-default btn-lg">Ролевая игра</button>
  <button type="button" class="btn btn-default btn-lg">Симулятор</button>
  <button type="button" class="btn btn-default btn-lg">Спортивная игра</button>
  <button type="button" class="btn btn-default btn-lg">Стратегия</button>
  <button type="button" class="btn btn-default btn-lg">Экшен</button>
</div>
{% endblock %}