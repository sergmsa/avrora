{% extends 'UserPostBundle:Default:index.html.twig' %}

{% block main_content %}

 <div class="panel-group" id="accordion">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
          Загрузка файлов
        </a>
      </h4>
    </div>
    <div id="collapseOne" class="panel-collapse collapse in">
      <div class="panel-body">
        <form action="upload.php" method="post" enctype="multipart/form-data">
				<input id="lefileUpload" type="file" style="display:none" name="lefile"/>
				<input class="path_upload" type="text" style="display:none" value="{{ USER_INFO.USER_DIR }}"/>
				 <div class="row">
				  <div class="col-lg-12">
					<div class="input-group">
					  <input type="text" class="form-control photoCover"/>
					  <span class="input-group-btn">
						<button class="btn btn-default" type="button"  onclick="$('input[id=lefileUpload]').click();">ФАЙЛ</button>
					  </span>
					</div><!-- /input-group -->
				  </div><!-- /.col-lg-6 -->
				</div><!-- /.row -->
				<br/>
				<textarea class="form-control" rows="3" placeholder="комментарии к файлу"></textarea>
				<br/>
				<button type="submit" class="btn btn-default btn-lg btn-block btn-sm">Загрузить</button>
		</form>
      </div>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">
          Создание директории
        </a>
      </h4>
    </div>
    <div id="collapseTwo" class="panel-collapse collapse">
      <div class="panel-body">
	  
	   <form action="upload.php" method="post" enctype="multipart/form-data">

				<input id="path_create_dir" type="text" style="display:none" value="{{ USER_INFO.USER_DIR }}"/>
				 <div class="row">
				  <div class="col-lg-12">
					<div class="input-group">
					  <input type="text" class="form-control" id="createDir" value="{{ USER_INFO.USER_DIR }}/"/>
					  <span class="input-group-btn">
						<button class="btn btn-default" type="button">Директория</button>
					  </span>
					</div><!-- /input-group -->
				  </div><!-- /.col-lg-6 -->
				</div><!-- /.row -->
				<br/>
		         <button type="submit" class="btn btn-default btn-lg btn-block btn-sm">Создать</button>
		</form>
	  
      </div>
    </div>
  </div>
 </div>
<br/>


