  <style>
    body{
      padding-top: 100px;
      margin-bottom: 100px;
    }
    .loginbutton,.logoutbutton{
      outline:none !important;
    }
    #footer {
      position: absolute;
      bottom: 0;
      width: 100%;
      height: 50px;
      background-color: #f5f5f5;
    }
  </style>
</head>

<body>
<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/adm"><span class="glyphicon glyphicon-wrench"></span> Администрирование</a>
    </div>
    
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li {% if menu == 'clients' %}  class="active" {% endif %}><a href="/adm/clients">Клиенты</a></li>
        <li {% if menu == 'attractions' %}  class="active" {% endif %}><a href="/adm/attractions">Аттракционы</a></li>
        <li {% if menu == 'games' %}  class="active" {% endif %}><a href="/adm/games">Игры</a></li>
        <li class="dropdown {% if menu == 'commands' or menu == 'historycommands' or menu == 'gamesinstall' %} active {% endif %}">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Прочие <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li {% if menu == 'commands' %}  class="active" {% endif %}><a href="/adm/commands">Текущие команды</a></li>
            <li class="divider"></li>
            <li {% if menu == 'historycommands' %}  class="active" {% endif %}><a href="/adm/historycommands">История команд</a></li>
            <li {% if menu == 'gamesinstall' %}  class="active" {% endif %}><a href="/adm/gamesinstall">Установки игр</a></li>
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->    
  </div>
</div>
<div class="container">

{% block body %}
{% endblock %}

</div>

<script>
$(document).ready(function(){
  $(".loginbutton").click(function(event){
    event.preventDefault(); 
    $(".loginfrm").hide();
    $(".logoutfrm").show();
  });
  
  $(".logoutbutton").click(function(event){
    event.preventDefault(); 
    $(".logoutfrm").hide();
    $(".loginfrm").show();
  });
  
});
</script>
</body>
</html>